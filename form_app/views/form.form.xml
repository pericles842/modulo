<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="view_form_tree" model ="ir.ui.view"> 
        <field name="name">tree</field>
        <field name="model">form.form</field> 
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="last_name"/>
                <field name="sexo"/>
                <field name="age"/>
                <field name="registration_date"/>
            </tree>
        </field>
    </record>

  <record id="view_form_form" model ="ir.ui.view"> 
        <field name="name">form</field>
        <field name="model">form.form</field> 
        <field name="arch" type="xml">
            <form>
                <sheet>
                   <group>
                         <group>
                            <field name="name"/>
                            <label for="nationality" string="Identification card"/>
                            <div class="o_row">
                                <field name="nationality"/>
                                <field name="ci"/>
                            </div>
                            <field name="registration_date" invisible="1"/>
                            <field name="date_of_birth"/>
                            <field name="algo" widget="Boolean"/> 
                            <field name="degree"/>
                            <field name="force"/>
                            </group>
                        <group>
                            <field name="last_name"/>
                            <field name="sexo"/>
                            <field name="age"/>
                        </group>
                   </group>
                </sheet>
            </form>
        </field>
    </record>

    <act_window  
        id="action_form"
        name="form"
        res_model = "form.form"  
        view_mode="tree,form" /> 


    <menuitem id="menu_form" name="Form" />
    
    <menuitem id="menu_form_form"
        name="form" 
        parent ="form_app.menu_form" 
        action="action_form"/> 

</odoo>