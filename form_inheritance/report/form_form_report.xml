<?xml version="1.0"?>
<odoo>
    <record id="report_form_paperformat"
        model="report.paperformat">
  <field name="name">European A4 Landscape</field>
  <field name="default" eval="True" />
  <field name="format">A4</field>
  <field name="page_height">0</field>
  <field name="page_width">0</field>
  <field name="orientation">Portrait</field>
  <field name="margin_top">40</field>
  <field name="margin_bottom">23</field>
  <field name="margin_left">7</field>
  <field name="margin_right">7</field>
  <field name="header_line" eval="False" />
  <field name="header_spacing">35</field>
  <field name="dpi">90</field>
</record>

<report id="action_form_report"
  string="Prueba de PDF"
  model="form.form" report_type="qweb-pdf"
  name="form_inheritance.report_form_template"
 />
 <template id="report_form_template">
     <t t-call="web.html_container">
         <t t-call="web.external_layout">
            <t t-foreach="docs" t-as="o">
                <span class="row" > 
                    <span>
                       <table style="font-size:25px;">
                           <tr> 
                              <td  style="padding-right: 30px;">
                                  <b>Name</b> 
                              </td>
                              <div >
                                  <td style="border-left:1px solid; padding-left: 15px;">
                                      <span t-field="o.name"/>
                                  </td>
                              </div>
                          </tr>
                          <tr> 
                              <td style="padding-right: 30px;">
                                  <b>Identification Card</b>
                              </td>
                              <div >
                                  <td style="border-left:1px solid; padding-left: 15px;">
                                      <span t-field="o.ci"/>
                                  </td>
                              </div>
                          </tr>
                          <tr> 
                              <td style="padding-right: 30px;">
                                  <b>Date Of Birth</b>
                              </td>
                              <div >
                                  <td style="border-left:1px solid; padding-left: 15px;">
                                      <span t-field="o.date_of_birth"/>
                                  </td>
                              </div>
                          </tr>
                          <tr> 
                              <td style="padding-right: 30px;">
                                  <b>Civil/Militar</b>
                              </td>
                              <div >
                                  <td style="border-left:1px solid; padding-left: 15px;">
                                      <span t-field="o.algo"/>
                                  </td>
                              </div>
                          </tr>
                      </table>
                      </span>
                    <span style="margin-left: 500px;" >
                       <table style="font-size:25px;" >
                           <tr>
                               <td style="padding-right: 30px;">
                                   <b>Last Name</b>
                               </td>
                               <div>
                                   <td style="border-left:1px solid; padding-left: 15px;">
                                       <span t-field="o.last_name"/>
                                   </td>
                               </div>
                           </tr>
                           <tr>
                               <td style="padding-right: 30px;">
                                   <b>Sexo</b>
                               </td>
                               <div>
                                   <td style="border-left:1px solid; padding-left: 15px;">
                                       <span t-field="o.sexo"/>
                                   </td>
                               </div>
                           </tr>
                           <tr>
                               <td style="padding-right: 30px;">
                                   <b>Age</b>
                               </td>
                               <div >
                                   <td style="border-left:1px solid; padding-left: 15px;">
                                       <span t-field="o.age"/>
                                   </td>
                               </div>
                           </tr>
                           <tr>
                               <td style="padding-right: 30px;">
                                   <b>Career</b>
                               </td>
                               <div >
                                   <td style="border-left:1px solid; padding-left: 15px;">
                                       <span t-field="o.career_id"/>
                                   </td>
                               </div>
                           </tr>
                       </table>
                    </span>
                </span>
                <br/>
                <br/>
               <h3> Subjet </h3>
               <span>
                   <table>  
                       <tr>
                           <td>
                               <b>Name</b>
                           </td>
                           <td>
                               <b>Section</b>
                           </td>
                           <td>
                               <b>Code</b>
                           </td>
                           <td>
                               <b>Credit Units</b>
                           </td>
                       </tr>
                       <tr>       
                           <td>
                                <span t-field="o.subjet_form_ids.name"/>
                           </td>
                           <td>
                                <span t-field="o.subjet_form_ids.section"/>
                           </td>
                           <td>
                                <span t-field="o.subjet_form_ids.code"/>
                           </td>
                           <td>
                                <span t-field="o.subjet_form_ids.credit_units"/>    
                           </td>
                       </tr>
                   </table>
               </span>
           </t>
         </t>
    </t>
</template>
</odoo>
